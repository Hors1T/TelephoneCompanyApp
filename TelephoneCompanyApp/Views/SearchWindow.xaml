<Window x:Class="TelephoneCompanyApp.SearchWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:TelephoneCompanyApp"
        mc:Ignorable="d"
        Title="Поиск по номеру" Height="100" Width="300">
    <Grid>
            <TextBox x:Name="SearchText" Text="{Binding SearchText}" Width="200" Height="25" Margin="10" VerticalAlignment="Center" HorizontalAlignment="Left"/>
            <Button Content="Поиск" Command="{Binding CloseCommand}" Width="50" Height="25" Margin="10" VerticalAlignment="Center" HorizontalAlignment="Right"/>
    </Grid>
</Window>
